{
  "manifest_version": 3,
  "name": "Leedz - Lead Generation",
  "name_localized": {
    "ar": "ليدز - توليد العملاء"
  },
  "version": "1.0.0",
  "description": "Chrome extension for Leedz platform - Search and manage leads directly from your browser",
  "description_localized": {
    "ar": "إضافة كروم لمنصة ليدز - ابحث وأدر العملاء مباشرة من متصفحك"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "activeTab",
    "scripting",
    "windows",
    "alarms"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://www.google.com/maps/*",
    "https://maps.google.com/*",
    "https://www.google.com/search*",
    "https://google.com/search*",
    "https://www.google.com.sa/*",
    "https://www.google.ae/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://www.x.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*",
    "https://www.snapchat.com/*",
    "https://snapchat.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "options_page": "settings/settings.html",
  
  "action": {
    "default_title": "Leedz"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
